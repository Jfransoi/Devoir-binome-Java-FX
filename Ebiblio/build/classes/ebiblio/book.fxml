<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="bookBox" alignment="CENTER" prefHeight="322.0" prefWidth="186.0" spacing="5.0" style="-fx-background-radius: 10;" styleClass="shadow" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="BookImage" fitHeight="240.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../img/book%20cover%201.jpg" />
         </image>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </ImageView>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label fx:id="BookName" alignment="CENTER" contentDisplay="CENTER" prefHeight="3.0" prefWidth="167.0" text="Book Title" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Black" size="24.0" />
               </font>
            </Label>
            <Label fx:id="AuthorName" alignment="CENTER" contentDisplay="CENTER" prefHeight="41.0" prefWidth="160.0" text="Author Name" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Semibold" size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
